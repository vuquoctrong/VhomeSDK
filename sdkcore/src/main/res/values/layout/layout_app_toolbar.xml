<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/groupConstrainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_88"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_toolbar_top" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBackgroundBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_20"
            android:scaleType="fitXY"
            android:src="@drawable/ic_toolbar_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivBackground" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLeft"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_40"
            android:paddingVertical="@dimen/dimen_13"
            android:src="@drawable/ic_app_back"
            android:tint="@color/black_sdk"
            android:minHeight="@dimen/dimen_40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivBackground" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRight"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_40"
            android:paddingVertical="@dimen/dimen_5"
            app:layout_constraintBottom_toBottomOf="@id/ivLeft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivLeft"
            tools:src="@drawable/ic_setting_expand_more" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRight"
            style="@style/text_bold_20"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_38"
            android:layout_marginEnd="@dimen/dimen_4"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_10"
            app:layout_constraintBottom_toBottomOf="@id/ivLeft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivLeft" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/ivLeft"
            app:layout_constraintTop_toTopOf="@id/ivLeft">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivShareDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_share_device"
                android:layout_marginEnd="@dimen/dimen_10"
                app:layout_constraintEnd_toStartOf="@+id/tvTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/text_bold_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center"
                android:layout_gravity="center"
                android:maxLines="1"
                android:layout_marginHorizontal="@dimen/dimen_60"
                android:textColor="#4E4E4E"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Công tắc 4 nút" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubTitle"
                style="@style/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="8dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/dimen_60"
                android:textColor="#4E4E4E"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                tools:text="Subtitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

