<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:background="@drawable/bg_white_corner_28"
            android:elevation="@dimen/dimen_12"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/text_light_bold_16"
                android:layout_marginStart="@dimen/dimen_25"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginEnd="@dimen/dimen_25"
                android:gravity="center"
                android:text="@string/password_is_provided_one_time_use_only" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_password"
                style="@style/text_light_bold_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_30"
                android:background="@drawable/bg_edt_verify_code"
                android:gravity="center"
                android:inputType="textPassword"
                android:paddingTop="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_10"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cancel"
                    style="@style/text_bold_14"
                    android:layout_width="@dimen/dimen_117"
                    android:layout_height="@dimen/dimen_34"
                    android:layout_margin="@dimen/dimen_10"
                    android:background="@drawable/bg_button_gray"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/white_sdk" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_ok"
                    style="@style/text_bold_14"
                    android:layout_width="@dimen/dimen_117"
                    android:layout_height="@dimen/dimen_34"
                    android:layout_margin="@dimen/dimen_10"
                    android:background="@drawable/bg_button_red"
                    android:gravity="center"
                    android:text="@string/ok"
                    android:textColor="@color/white_sdk" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>