<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_8" />
            <gradient android:endColor="#ba3030" android:startColor="@color/color_A31818" />

        </shape>

    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_8" />
            <solid android:color="@color/color_CECECE" />

        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_8" />
            <gradient android:endColor="@color/color_BE0A45" android:startColor="@color/color_F8214B" />

        </shape>

    </item>

</selector>

