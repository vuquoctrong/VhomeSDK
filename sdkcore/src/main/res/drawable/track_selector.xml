<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:width="@dimen/dimen_36" android:height="@dimen/dimen_20"/>
            <gradient
                android:startColor="#BE0A45"
                android:endColor="#F8214B" />
            <corners android:radius="@dimen/dimen_50"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:width="@dimen/dimen_36" android:height="@dimen/dimen_20"/>
            <solid android:width="@dimen/dimen_1" android:color="@android:color/darker_gray"/>
            <corners android:radius="@dimen/dimen_50"/>
        </shape>
    </item>

</selector>