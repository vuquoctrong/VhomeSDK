<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="center_vertical">
        <shape android:shape="rectangle">
            <solid android:color="#B4B4B4" />
            <size android:height="@dimen/dimen_6" />
            <corners android:radius="@dimen/dimen_5" />
        </shape>

    </item>


    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EC0D3A" />
            <corners android:radius="@dimen/dimen_2" />
        </shape>
    </item>


    <item
        android:left="@dimen/dimen_3"
        android:right="@dimen/dimen_3">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_sdk" />
            <stroke
                android:width="@dimen/dimen_2"
                android:color="#F5F7F9" />
        </shape>
    </item>


    <item android:gravity="center_vertical">
        <scale android:scaleWidth="100%">
            <selector>
                <item
                    android:drawable="@android:color/transparent"
                    android:state_enabled="false" />
                <item>
                    <shape android:shape="rectangle">
                        <solid android:color="#EC0D3A" />
                        <size android:height="@dimen/dimen_6" />
                        <corners android:radius="@dimen/dimen_5" />
                    </shape>
                </item>

            </selector>
        </scale>
    </item>

</layer-list>