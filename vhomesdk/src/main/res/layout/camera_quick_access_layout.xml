<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llQuicklyAccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:animateLayoutChanges="true"
        android:background="@drawable/bg_quick_access"
        android:clickable="true"
        android:elevation="@dimen/dimen_10"
        android:focusable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_down_red"
            android:layout_gravity="center_horizontal"
            android:paddingStart="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_9"
            android:paddingEnd="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_15"
            android:rotation="180"/>

        <LinearLayout
            android:id="@+id/btng_quick_access"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_97"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/bt_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_12"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_camera_share" />

                <TextView
                    android:id="@+id/tvShare"
                    style="@style/text_10"
                    android:layout_marginTop="@dimen/dimen_9"
                    android:text="@string/label_camera_share" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutLibrary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_12"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_library"
                    android:layout_width="@dimen/dimen_37"
                    android:layout_height="@dimen/dimen_33"
                    android:src="@drawable/ic_camera_library_new" />

                <TextView
                    android:id="@+id/tvLibrary"
                    style="@style/text_10"
                    android:layout_marginTop="@dimen/dimen_9"
                    android:text="@string/label_camera_library" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnMultiScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_12"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivMultipleScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_multi_screen" />

                <TextView
                    android:id="@+id/tvMultipleScreen"
                    style="@style/text_10"
                    android:layout_marginTop="@dimen/dimen_9"
                    android:gravity="center_horizontal"
                    android:text="@string/label_camera_multi_screen" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_defence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_12"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_defence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_defence_selector" />

                <TextView
                    android:id="@+id/tvDefendence"
                    style="@style/text_10"
                    android:layout_marginTop="@dimen/dimen_9"
                    android:gravity="center_horizontal"
                    android:text="@string/label_camera_defence" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>
