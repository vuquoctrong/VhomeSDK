<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F7F9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cameraLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cameraLayout">

            <LinearLayout
                android:id="@+id/layout_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnAudioPTT"
                    style="@style/btnCameraControl"
                    android:src="@drawable/ic_ptt_audio" />

                <TextView
                    android:id="@+id/tvAudioPTT"
                    style="@style/text_12"
                    android:text="@string/conversation" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnHistory"
                    style="@style/btnCameraControl"
                    android:src="@drawable/ic_camera_history" />

                <TextView
                    android:id="@+id/tvHistory"
                    style="@style/text_12"
                    android:text="@string/label_video_history" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_live_stream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/btnLiveStream"
                    style="@style/btnCameraControl"
                    android:src="@drawable/ic_big_live_streaming" />

                <TextView
                    style="@style/text_12"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:fontFamily="@font/regular"
                    android:text="@string/label_video_live_stream" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_record"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin">

                <ImageButton
                    android:id="@+id/btnRecord"
                    style="@style/btnCameraControl"
                    android:src="@drawable/ic_camera_record_selector"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/loadingRecoding"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:elevation="@dimen/dimen_10"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvRecord"
                    style="@style/text_12"
                    android:text="@string/label_record"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/layout_snapshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnSnapShot"
                    style="@style/btnCameraControl"
                    android:src="@drawable/ic_camera_capture_image" />

                <TextView
                    android:id="@+id/tvSnapshot"
                    style="@style/text_12"
                    android:text="@string/label_capture_image" />
            </LinearLayout>
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>
