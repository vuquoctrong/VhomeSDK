<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.jfcameradetail.cloud.JFCloudRegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.viettel.vht.sdk.utils.custom.AppToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dimen_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:src_left="@drawable/ic_app_back"
            app:string_title="Đăng ký lưu trữ Cloud" />

        <View
            android:id="@+id/viewContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_app_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewContent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/rlRegister"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimen_20">

                    <RelativeLayout
                        android:id="@+id/rlDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:background="@drawable/bg_add_camera"
                        android:paddingHorizontal="@dimen/dimen_20"
                        android:paddingVertical="@dimen/dimen_15">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/text_light_bold_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/device_registration" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDeviceName"
                            style="@style/text_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            tools:text="Camera 1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlTypeSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rlDevice"
                        android:layout_marginHorizontal="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:background="@drawable/bg_add_camera"
                        android:paddingHorizontal="@dimen/dimen_20"
                        android:paddingVertical="@dimen/dimen_15"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/text_light_bold_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/storage_type" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTypeSave"
                            style="@style/text_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@string/event" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlStoragePackage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rlTypeSave"
                        android:layout_marginHorizontal="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:background="@drawable/bg_add_camera"
                        android:paddingHorizontal="@dimen/dimen_20"
                        android:paddingVertical="@dimen/dimen_15">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/text_light_bold_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Gói lưu trữ" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTimeStorage"
                            style="@style/text_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dimen_8"
                            android:layout_toStartOf="@id/imgSelect"
                            tools:text="Lưu sự kiện 3 ngày" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgSelect"
                            android:layout_width="@dimen/dimen_20"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_back_left" />


                    </RelativeLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rlStoragePackage"
                        android:layout_marginHorizontal="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:layout_marginBottom="@dimen/dimen_4"
                        android:background="@drawable/bg_add_camera"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/dimen_15">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_15">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/text_light_bold_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đóng trước cước" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/text_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="@string/string_title_price" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_1"
                            android:layout_marginHorizontal="@dimen/dimen_10"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:background="@color/color_CECECE" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcvStorageTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/dimen_10"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_storage_time" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clExtendCloud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:background="@drawable/bg_setting_camera">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTitleExtend"
                            style="@style/text_bold_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:text="@string/string_title_extend_service"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swTurnOffExtend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_16"
                            android:thumb="@drawable/thumb_selector"
                            app:layout_constraintBottom_toBottomOf="@id/tvTitleExtend"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvTitleExtend"
                            app:track="@drawable/track_selector" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clReferralCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:background="@drawable/bg_setting_camera"
                        android:padding="@dimen/dimen_7"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTitleReferCode"
                            style="@style/text_light_bold_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dimen_5"
                            android:text="@string/string_title_dialog_refer_code_cloud"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvReferCode"
                            style="@style/text_bold_14"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dimen_40"
                            android:layout_marginEnd="@dimen/dimen_5"
                            android:background="@null"
                            android:gravity="center|end"
                            android:hint="@string/string_hint_refer_code"
                            android:maxLength="50"
                            android:minLines="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imvShowQRCode"
                            app:layout_constraintStart_toEndOf="@+id/tvTitleReferCode"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imvShowQRCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_10"
                            android:src="@drawable/ic_back_right"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clPaymentMethods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:background="@drawable/bg_setting_camera"
                        android:padding="@dimen/dimen_10"
                        android:visibility="visible"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTitlePay"
                            style="@style/text_bold_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:text="@string/string_title_pay_method"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_1"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:background="#CECECE"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvTitlePay" />

                        <RadioGroup
                            android:id="@+id/rbGroupPay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:layout_marginTop="@dimen/dimen_10"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view1">

                            <RadioButton
                                android:id="@+id/rbPayLink"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_40"
                                android:button="@null"
                                style="@style/text_14"
                                android:visibility="gone"
                                android:drawableLeft="@drawable/bg_radio_oval_select"
                                android:drawablePadding="@dimen/dimen_5"
                                android:text="@string/string_pay_link" />

                            <RadioButton
                                android:id="@+id/rbPayGate"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_40"
                                android:button="@null"
                                style="@style/text_14"
                                android:drawableLeft="@drawable/bg_radio_oval_select"
                                android:drawablePadding="@dimen/dimen_5"
                                android:text="@string/string_bank_viettel_pay_gate" />

                            <RadioButton
                                android:id="@+id/rbPayParent"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_40"
                                android:button="@null"
                                style="@style/text_14"
                                android:drawableLeft="@drawable/bg_radio_oval_select"
                                android:drawablePadding="@dimen/dimen_5"
                                android:text="@string/string_parent_account_pay"
                                android:visibility="gone" />
                        </RadioGroup>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>

            </ScrollView>


            <RelativeLayout
                android:id="@+id/rlRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center|end"
                android:orientation="vertical"
                android:paddingTop="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dimen_20">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgNote"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_note" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/text_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:text="@string/string_message_cloud_register" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_below="@id/llNote"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@color/color_CECECE" />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/btnPayment"
                    android:layout_alignBottom="@id/btnPayment"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:layout_toStartOf="@id/btnPayment"
                    android:gravity="end"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/text_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_payment" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMoney"
                        style="@style/text_light_bold_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:text="0đ"
                        android:textColor="@color/color_ef1e4a" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btnPayment"
                    style="@style/CustomButtonRed"
                    android:layout_width="@dimen/dimen_160"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llNote"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:paddingHorizontal="4dp"
                    android:text="Thanh toán"
                    android:visibility="visible" />

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>