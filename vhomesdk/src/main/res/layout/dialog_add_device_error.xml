<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:background="@drawable/bg_setting_camera"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_16">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_dialog_error" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMessage"
                style="@style/text_bold_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:gravity="center"
                android:textColor="@color/color_4E4E4E"
                tools:text="Thiết bị đang thuộc quyền sở hữu của tài khoản 096****789." />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMessage1"
                style="@style/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:justificationMode="inter_word"
                android:text="@string/camera_support_binding"
                android:textColor="@color/color_4E4E4E" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnOk"
                style="@style/CustomButtonRed"
                android:layout_width="@dimen/dimen_120"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:paddingHorizontal="@dimen/dimen_10"
                android:text="@string/ok"
                android:textSize="@dimen/text_size_16" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>


</layout>